

@model IEnumerable<WebApiCRUD.Models.Contact>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Contact List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Contact" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Contact Id
                    </th>
                    <th>
                     Contact Name
                    </th>
                    <th>
                     Country Id
                    </th>
                    <th>
                     Company Id
                    </th>
                   

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.ContactId</td>
                    <td width="30%">@obj.ContactName</td>
                    <td width="30%">@obj.CountryId</td>
                    <td width="30%">@obj.CompanyId</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Contact" asp-route-Id="@obj.ContactId" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>  Edit
                            </a>
                            <a asp-controller="Contact" asp-route-Id="@obj.ContactId" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Contact exists.</p>
    }

</div>




